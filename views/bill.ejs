<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="invoice">
        <div class="company-details">
            <h3>Annapoorna Mithai</h3>
            <p>Annapoorna Mithai, 12/2, Ramnagar, Bypass road, Madurai <br> Contact: annapoornamithai@gmail.com &nbsp  &nbsp GSTIN - 33BCTPA8028E2ZP</p>
        </div>
        <hr>
        <div class="details-container">
            <div class="order-details">
                <h3>Order details</h3>
                <p>Order ID: <%= orderId %></p>
                <p>Order Date: <%= orderDate %></p>
                <p>Payment: <%= paymentMethod %></p>
            </div>

            <div class="customer-details">
                <h3>Customer details</h3>
                <p><%= customerName %><br>
                <%= customerAddress %><br>
                Mobile: <%= customerMobile %><br>
                Email: <%= customerEmail %></p>
            </div>
        </div>
        <div class="order-summary">
            <h3>Order summary</h3>
            <hr>
            <table>
                <thead>
                    <tr class="line">
                        <th>Item</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% orderItems.forEach(function(item) { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.qty %></td>
                        <td>₹<%= item.price %></td>
                        <td>₹<%= item.amount %></td>
                    </tr>
                    <% }); %>
                </tbody>
                <tfoot>
                    <tr class="lineup">
                        <td colspan="3">Item Total</td>
                        <td>₹<%= itemTotal %></td>
                    </tr>
                    <tr class="line">
                        <td colspan="3">Delivery</td>
                        <td>₹<%= deliveryCharge %></td>
                    </tr>
                    <tr>
                        <td colspan="3"><strong>Total</strong></td>
                        <td><strong>₹<%= totalAmount %></strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</body>
</html>
